<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Fragment2">



    <TextView
        android:id="@+id/textView"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infos"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TableRow
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/nom"
            android:layout_column="0"
            />

        <TextView
            android:id="@+id/Nom"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
             />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/tv_nom"
        android:layout_alignParentBottom="true"
        android:text="@string/prenom"
        android:textStyle="bold"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/Prenom"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="1"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:text="@string/dateNaissance"
        android:textStyle="bold"
        android:layout_column="0"
        />

    <TextView
        android:id="@+id/DateN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/numDeTel"
        android:textColor="@color/black"
        android:layout_column="0"
        />
    <TextView
        android:id="@+id/NumTel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="1"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_column="0"
        />


    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_weight="1"/>

    </TableRow>

    <TextView
        android:id="@+id/switchB"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Les centres d'intérêt: "
        android:textStyle="bold"
        />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
         />

    <Button
        android:id="@+id/btt_validation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/validez" />

    <Button
        android:id="@+id/btt_lecture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read" />

</TableLayout>